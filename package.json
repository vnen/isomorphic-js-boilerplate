{
  "name": "isomorphic-js-boilerplate",
  "version": "1.0.0",
  "description": "A simple boilerplate for isoporphic/progressive React.js + Backbone.js + Flux application",
  "private": true,
	"keywords": [
		"isomorphic",
		"javascript",
		"React",
		"Backbone",
		"Flux",
		"Koa"
	],
  "main": "index.js",
  "scripts": {
    "pretest": "make lint",
    "test": "make test",
    "start": "make start",
    "remove-spaces": "sh scripts/remove-spaces.sh",
		"postinstall": "ln -s ../../scripts/validate-commit-message.js .git/hooks/commit-msg"
  },
  "pre-commit": [
    "remove-spaces",
    "test"
  ],
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vnen/isomorphic-js-boilerplate.git"
  },
  "author": "George Marques <george@georgemarques.com.br> (http://georgemarques.com.br)",
  "license": "CPAL-1.0",
  "bugs": {
    "url": "https://github.com/vnen/isomorphic-js-boilerplate/issues"
  },
  "homepage": "https://github.com/vnen/isomorphic-js-boilerplate",
  "devDependencies": {
    "browserify": "^9.0.3",
    "chai": "^2.1.1",
    "istanbul": "^0.3.7",
    "jscs": "^1.11.3",
    "jsxhint": "^0.12.1",
    "koa-delay": "0.0.2",
    "mocha": "^2.1.0",
    "pre-commit": "^1.0.5",
    "reactify": "^1.0.0",
    "sinon": "^1.12.2",
    "sinon-chai": "^2.7.0",
    "watchify": "^2.4.0",
    "zuul": "^2.1.0"
  },
  "dependencies": {
    "backbone": "^1.1.2",
    "backbone-react-component": "^0.8.0-beta.2",
    "flux": "^2.0.1",
    "jquery": "^2.1.3",
    "jquery-deferred": "^0.3.0",
    "jquery.cookie": "^1.4.1",
    "jsonwebtoken": "^3.2.2",
    "jsx-require-extension": "^0.2.0",
    "keymirror": "^0.1.1",
    "koa": "^0.18.1",
    "koa-better-body": "^1.0.17",
    "koa-hbs": "^0.7.0",
    "koa-logger": "^1.2.2",
    "koa-mount": "^1.3.0",
    "koa-router": "^4.2.0",
    "koa-static-cache": "^3.0.1",
    "react": "^0.13.1",
    "underscore": "^1.8.2"
  }
}
